#! /usr/bin/env sh


if test -z "$1"; then
    echo "you must provide a python file"
    exit 1
fi

yes | rm -r 21f1003831 21f1003831.zip 2>/dev/null

mkdir -p 21f1003831

cp "$1" 21f1003831
echo python3 "$1" > 21f1003831/run
cat 21f1003831.md | gfm > 21f1003831.html

zip -r 21f1003831.zip 21f1003831
